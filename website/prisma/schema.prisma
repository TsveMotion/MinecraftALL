// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id                Int       @id @default(autoincrement())
  email             String    @unique @db.VarChar(255)
  passwordHash      String    @map("password_hash") @db.VarChar(255)
  fullName          String    @map("full_name") @db.VarChar(255)
  minecraftUsername String    @unique @map("minecraft_username") @db.VarChar(16)
  minecraftUuid     String?   @map("minecraft_uuid") @db.VarChar(36)
  realName          String?   @map("real_name") @db.VarChar(100)
  yearGroup         Int?      @map("year_group")
  rankColor         String?   @map("rank_color") @db.VarChar(20)
  isAdmin           Boolean   @default(false) @map("is_admin")
  verified          Boolean   @default(false)
  lastLoginAt       DateTime? @map("last_login_at")
  lastLoginIp       String?   @map("last_login_ip") @db.VarChar(45)
  isOnline          Boolean   @default(false) @map("is_online")
  createdAt         DateTime  @default(now()) @map("created_at")
  updatedAt         DateTime  @default(now()) @updatedAt @map("updated_at")

  reportsMade       Report[]  @relation("ReporterReports")
  reportsReceived   Report[]  @relation("ReportedReports")
  admin             Admin?
  roles             UserRole[]

  @@index([minecraftUsername])
  @@index([email])
  @@index([verified])
  @@index([isAdmin])
  @@index([minecraftUuid])
  @@map("users")
}

model RegistrationToken {
  token             String   @id @db.VarChar(64)
  minecraftUsername String   @map("minecraft_username") @db.VarChar(16)
  expiresAt         DateTime @map("expires_at")
  createdAt         DateTime @default(now()) @map("created_at")

  @@index([expiresAt])
  @@index([minecraftUsername])
  @@map("registration_tokens")
}

model BedrockPin {
  id                Int      @id @default(autoincrement())
  minecraftUsername String   @map("minecraft_username") @db.VarChar(16)
  pin               String   @db.VarChar(6)
  expiresAt         DateTime @map("expires_at")
  createdAt         DateTime @default(now()) @map("created_at")

  @@index([pin])
  @@index([minecraftUsername])
  @@index([expiresAt])
  @@map("bedrock_pins")
}

model Report {
  id                Int      @id @default(autoincrement())
  reporterId        Int      @map("reporter_id")
  reportedId        Int      @map("reported_id")
  description       String   @db.Text
  status            String   @default("open") @db.VarChar(20)
  createdAt         DateTime @default(now()) @map("created_at")

  reporter          User     @relation("ReporterReports", fields: [reporterId], references: [id], onDelete: Cascade)
  reported          User     @relation("ReportedReports", fields: [reportedId], references: [id], onDelete: Cascade)

  @@index([reporterId])
  @@index([reportedId])
  @@index([status])
  @@map("reports")
}

model Ban {
  id                Int       @id @default(autoincrement())
  minecraftUsername String    @map("minecraft_username") @db.VarChar(16)
  bannedBy          String    @map("banned_by") @db.VarChar(16)
  reason            String?   @db.Text
  isPermanent       Boolean   @default(false) @map("is_permanent")
  expiresAt         DateTime? @map("expires_at")
  createdAt         DateTime  @default(now()) @map("created_at")

  @@index([minecraftUsername])
  @@index([expiresAt])
  @@map("bans")
}

model Admin {
  id        Int      @id @default(autoincrement())
  userId    Int      @unique @map("user_id")
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now()) @map("created_at")

  @@index([userId])
  @@map("admins")
}

model Mute {
  id        Int       @id @default(autoincrement())
  userId    Int       @map("user_id")
  mutedBy   Int       @map("muted_by")
  reason    String?   @db.Text
  expiresAt DateTime? @map("expires_at")
  createdAt DateTime  @default(now()) @map("created_at")

  @@index([userId])
  @@index([expiresAt])
  @@map("mutes")
}

model Role {
  id        Int        @id @default(autoincrement())
  name      String     @unique @db.VarChar(50)
  isPaid    Boolean    @default(false) @map("is_paid")
  price     Int?       // in GBP pennies (e.g., 500 = Â£5.00)
  color     String?    @db.VarChar(20)
  createdAt DateTime   @default(now()) @map("created_at")
  users     UserRole[]

  @@index([name])
  @@map("roles")
}

model UserRole {
  userId     Int      @map("user_id")
  roleId     Int      @map("role_id")
  assignedAt DateTime @default(now()) @map("assigned_at")

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  role Role @relation(fields: [roleId], references: [id], onDelete: Cascade)

  @@id([userId, roleId])
  @@index([userId])
  @@index([roleId])
  @@map("user_roles")
}
